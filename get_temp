#!/usr/bin/env python3
"""
get _temp version 1.1
Python 3.7
"""

from datetime import datetime
import requests
import time
from bs4 import BeautifulSoup
import xlwt
from xlwt import Workbook


def get_temp():
    """Scrapes temp from web and formats it."""
    page = requests.get(
        "https://forecast.weather.gov/MapClick.php?CityName=Loveland&state=CO&site=BOU&lat=40.4186&lon=-105.072"
    )
    soup = BeautifulSoup(page.content, "html.parser")
    name = soup.find("p", {"class": "myforecast-current-lrg"})

    """Format temp."""
    current_temp = "".join(name)
    temp_list = list(current_temp)
    del temp_list[2:4]
    return int("".join(temp_list))


def get_time():
    """gets time of day."""
    now = datetime.now()
    current_time = now.strftime("%H:%M:%S")
    return current_time


def write_temp():
    """Writes temp and time at selected interval."""
    seconds = 300
    col = 0
    row = 0
    wb = Workbook()
    sheet1 = wb.add_sheet("Temp")
    while True:
        print(f"writting at {get_time()}.")
        sheet1.write(row, col, get_temp())
        sheet1.write(row, 1, get_time())
        wb.save("Temp.xls")
        row += 1
        time.sleep(seconds)


if __name__ == "__main__":
    write_temp()
